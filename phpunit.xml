<?xml version="1.0" encoding="UTF-8"?>
<!-- http://phpunit.de/manual/5.7/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
         backupGlobals="false"
         colors="true"
>
    <testsuites>
        <testsuite name="EtherpadLiteClient Tests">
            <directory>src/EtherpadLite/Tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>src/EtherpadLite</directory>
            <exclude>
                <directory>src/EtherpadLite/Tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
